
define(`ELEM_MOD',
       `container ":" "" canvas nodecor base:ubs$2 content:4 {
            container ":subwin" " \n $2 \n " subwin content:1 {
                include(`panov_ubs.subsys')
            }
            disp - "" led "nomargins,color=green,offcol=red" r:stat_st2_online layinfo:left=!3@:subwin,top=!3@:subwin
            disp - "" led "nomargins,color=green,offcol=red" r:stat_st1_online layinfo:left=!3@:subwin,bottom=!3@:subwin
            disp - "" led "nomargins,color=green,offcol=red" r:stat_dgs_online layinfo:right=!3@:subwin,bottom=!3@:subwin
        }')

define(`ELEM_RACK',
       `container ":" "Rack $1" grid nocoltitles,norowtitles base:rack$1:43 content:3 {
            container ":" "" grid nodecor param1:2 content:2 {
                ELEM_MOD($1, C)
                ELEM_MOD($1, D)
            }
            noop - - hlabel
            container ":" "" grid nodecor param1:2 content:4 {
                ELEM_MOD($1, B)
                ELEM_MOD($1, E)
                ELEM_MOD($1, A)
                ELEM_MOD($1, F)
            }
        }')

grouping main mainGrouping "Main screen" lrtb content:8 {
    ELEM_RACK(1)
    ELEM_RACK(2)
    ELEM_RACK(3)
    ELEM_RACK(4)
    ELEM_RACK(5)
    ELEM_RACK(6)
    ELEM_RACK(7)
    ELEM_RACK(8)
}

